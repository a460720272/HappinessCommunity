<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <ImageView
        android:id="@+id/recy_item_identity_manager_photo"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_identification_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/recy_item_identity_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_identification_name"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recy_item_identity_manager_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_identification_contact"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recy_item_identity_manager_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_identity_permission"
            android:gravity="center_vertical"
            android:text="小区管理员"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recy_item_identity_manager_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_identification_house_number"
            android:gravity="center_vertical"
            android:text="小区住址门牌号"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/recy_item_identity_manager_agree"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_identity_manager_agree"
                android:text="同意"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <Button
                android:id="@+id/recy_item_identity_manager_refuse"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_identity_manager_refuse"
                android:text="拒绝"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>