<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="详细资料"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_usr_list_detail_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_identification_name"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_usr_list_detail_info_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_personal_info_gender"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_usr_list_detail_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_identification_contact"
                    android:gravity="center_vertical"
                    android:text="手机号码"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_usr_list_detail_info_born"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_personal_info_born"
                    android:gravity="center_vertical"
                    android:text="出生日期"
                    android:textSize="14sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_usr_list_detail_info_photo"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:background="@color/colorGray"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/tv_usr_list_detail_info_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_identity_permission"
                android:gravity="center_vertical"
                android:text="小区管理员"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_usr_list_detail_info_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_personal_info_location"
                android:gravity="center_vertical"
                android:text="籍  贯"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_usr_list_detail_info_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_personal_info_integral"
                android:gravity="center_vertical"
                android:text="幸福积分"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_usr_list_detail_info_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_personal_info_email"
                android:gravity="center_vertical"
                android:text="邮箱"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_usr_list_detail_info_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_identification_house_number"
                android:gravity="center_vertical"
                android:text="小区住址门牌号"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>